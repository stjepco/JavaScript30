html,body
    height 100%
    margin 0
    padding 0

body
    display flex
    align-items center
    justify-content center

.clock
    width 400px
    height 400px
    background-color #ccc
    border-radius 50%
    border 4px solid #999
    position relative
    .ticks
        background-color #999
        position absolute

        left 50%
        top 50%
        width 20px
        height 20px
        border-radius 50%
        transform translate(-50%, -50%)
        .hour
            position absolute
            top 50%
            left 50%
            width 20px
            height 3px
            border-radius 40%
            background-color #000
            // transform-origin 0% 50%
            transform translate(-50%, -50%) rotate(calc(var(--i)*30deg)) translate(180px)
    .hands
        width 100%
        height 100%
        position relative
        .hour
            width 120px
            height 10px
            border-radius 5px
            background-color #000
            transform-origin 0% 50%
            transform translate(0%, -50%) rotate(30deg)
            position absolute
            top 50%
            left 50%