html,body
    height 100%
    margin 0
    padding 0

body
    display flex
    align-items center
    justify-content center

.clock
    width 400px
    height 400px
    background-color #ccc
    border-radius 50%
    position relative

    &:after, &:before
        content ""
        display block
        position absolute
        width 100%
        height 2px
        top 200px
        left 0
        background-color #f00
        transform translate(0%, -50%)
        display none

    &:before
        width 2px
        height 100%
        top 0
        left 200px
        transform translate(-50%, 0%)
        
    .ticks
        background-color rgba(tomato, 1)
        position absolute
        left 50%
        top 50%
        width 20px
        height 20px
        border-radius 50%
        transform translate(-50%, -50%)
        z-index 1

        .hour
            position absolute
            left 10px
            top 9px
            width 20px
            height 4px
            border-radius 40%
            background-color #000
            transform-origin 0% 50%
            transform rotate(calc(var(--i)*30deg)) translate(160px)

    .hands
        width 100%
        height 100%
        position relative

        .hours
            width 100px
            height 10px
            background-color #333
            transform-origin 0% 50%
            transform rotate(0deg)
            position absolute
            border-radius 2px
            top 195px /// 200 - Half of the height of the hand
            left 200px
        
        .minutes
            width 140px
            height 10px
            background-color #888
            transform-origin 0% 50%
            transform rotate(0deg)
            position absolute
            border-radius 2px
            top 195px /// 200 - Half of the height of the hand
            left 200px

        .seconds
            width 155px
            height 6px
            border-radius 2px
            background-color tomato
            transform-origin 0% 50%
            transform rotate(0deg)
            position absolute
            top 197px /// 200 - Half of the height of the hand
            left 200px
            transition transform 0.05s cubic-bezier(0.25, 0.13, 0.35, 1.53)